@model IEnumerable<HelpDeskMvc.Models.Chamado>
@{
    ViewData["Title"] = "BuscaData";
}

<h2>BuscaData</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Data mínima</label>
                    <input type="date" class="form-control" name="minDate" />
                </div>
                <div class="form-group">
                    <label for="maxDate">Data Máxima</label>
                    <input type="date" class="form-control" name="maxDate" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filtro</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">@Model.AguardandoAtendimento();</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.idChamado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dataAbertura)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.usuario)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.idChamado)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.dataAbertura)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.status)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.usuario.nomeUsuario)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>