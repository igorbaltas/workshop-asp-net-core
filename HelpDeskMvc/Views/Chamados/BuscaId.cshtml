@model IEnumerable<HelpDeskMvc.Models.Chamado>
@{
    ViewData["Title"] = "BuscaId";
}

<h2>Buscar por Id</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="id">Número do chamado</label>
                    <input type="number" class="form-control" name="id" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.idChamado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dataAbertura)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.usuario)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.idChamado)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.dataAbertura)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.status)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.usuario.nomeUsuario)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>