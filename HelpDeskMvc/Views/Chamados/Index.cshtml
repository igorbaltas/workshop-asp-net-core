@model IEnumerable<HelpDeskMvc.Models.Chamado>
@{
    ViewData["Title"] = "Lista de chamados";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.usuario != null)
{
    <h2>Olá, @ViewBag.usuario</h2>

}

<p>
    <a asp-action="Create" class="btn btn-default">Abrir ocorrência</a>
</p>


<div class="col-md-6">
    <form class="form-horizontal" asp-action="BuscaData">
        <fieldset>
            <legend>Buscar data de abertura</legend>
            <div class="form-group">
                <label for="minDate" class="col-lg-2 control-label">Data mínima</label>
                <div class="col-lg-10">
                    <input type="date" name="minDate" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label for="maxDate" class="col-lg-2 control-label">Data máxima</label>
                <div class="col-lg-10">
                    <input type="date" name="maxDate" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-primary">Pesquisar</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

<div class="col-md-6">
    <form class="form-horizontal" asp-action="BuscaId">
        <fieldset>
            <legend>Buscar número</legend>
            <div class="form-group">
                <label for="id" class="col-lg-2 control-label">Número do chamado</label>
                <div class="col-lg-10">
                    <input type="number" name="id" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-primary">Pesquisar por número</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success"> model.
            <th>
                @Html.DisplayNameFor(model => model.idChamado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataAbertura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.servico)
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idChamado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataAbertura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.servico.dsServico)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.idChamado" class="btn btn-warning">Visualizar</a>
                </td>
            </tr>
        }
    </tbody>


</table>

