@model IEnumerable<HelpDeskMvc.Models.Chamado>
@{
    ViewData["Title"] = "Meus chamados";
}

<h2>@ViewData["Title"]</h2>


<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.idChamado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.servico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idChamado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.servico.dsServico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.idChamado" class="btn btn-warning">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>


</table>

