@model IEnumerable<HelpDeskMvc.Models.Usuario>

@{
    ViewData["Title"] = "Usuários";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.usuario != null)
{
    <h2>Olá, @ViewBag.usuario, @ViewBag.id!</h2>
}


<div class="col-md-4">
    <form asp-action="Logout">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input type="submit" value="Sair" class="btn btn-default" />
        </div>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.nomeUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.loginUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nvlAcesso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.situacaoUsuario)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nomeUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.loginUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nvlAcesso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.situacaoUsuario)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idUsuario" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.idUsuario" class="btn btn-success">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.idUsuario" class="btn btn-danger">Deletar</a>
                </td>
            </tr>

        }
    </tbody>
</table>



